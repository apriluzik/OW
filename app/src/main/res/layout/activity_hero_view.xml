<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apriluziknaver.ow.HeroViewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

   <ImageView
       android:id="@+id/view_bg"
       android:scaleType="centerCrop"
       android:layout_width="match_parent"
       android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_margin="4dp"
        android:backgroundTint="@color/ow_navy_opacity88"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:id="@+id/view_name"
        android:layout_alignParentLeft="true"
        android:text="NAMENAME"
        android:padding="8dp"
        android:textSize="32sp"
        android:textColor="@color/ow_light_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:elevation="8dp"
                android:backgroundTint="@color/ow_orange"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/story_btn"
                    android:padding="10dp"
                    android:text="스토리보기"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/three_layout"
            app:cardCornerRadius="4dp"
            android:layout_margin="4dp"
            android:backgroundTint="@color/ow_navy_opacity88"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:paddingTop="2dp"
                    android:id="@+id/view_diff"
                    android:numStars="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="공격"
                    android:layout_marginRight="4dp"
                    android:textSize="32sp"
                    android:textColor="@color/ow_light_gray"
                    android:id="@+id/view_part"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="4dp"
            android:backgroundTint="@color/ow_navy_opacity88"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="8dp"
        android:tint="#22ffffff">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/backgroundstory"
            android:scaleType="centerCrop"
            android:id="@+id/view_bgHero"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/view_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:padding="16dp"
            android:text="둠피스트는 지능과 카리스마, 잔혹한 무력을 동원해 더욱 강한 세계를 건설하려는 책략가입니다"
            android:textColor="#fff"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
        </android.support.v7.widget.CardView>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="4dp"
            android:backgroundTint="@color/ow_navy_opacity88"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
            android:paddingTop="2dp"
            android:id="@+id/tv"
            android:gravity="right"
            android:paddingRight="16dp"
            android:text="보유스킬"
            android:textColor="@color/ow_light_gray"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/about"
                    android:text="AA"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/ow_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rccability"
            android:padding="10dp"
            android:scrollbars="none"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
