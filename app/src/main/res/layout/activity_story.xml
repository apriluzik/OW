<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mapriluzikgmail.heroes.StoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ow_navy_opacity88"
        >

    <android.support.v7.widget.CardView
        android:id="@+id/card_main"
        android:backgroundTint="@color/ow_navy"
        app:cardCornerRadius="4dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_txt"
            android:text="STORY"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ow_orange"/>

    </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_below="@+id/card_main"
        android:id="@+id/first"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="6dp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/st_img"
        android:src="@drawable/doomfist"
        android:scaleType="centerCrop"
        android:layout_width="150dp"
        android:layout_height="200dp"
        />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="2dp"
            android:backgroundTint="@color/ow_navy"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:weightSum="5"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/ow_light_gray"
                    android:id="@+id/ownname"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="aa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/ow_light_gray"
                    android:id="@+id/age"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="aa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/ow_light_gray"
                    android:id="@+id/occ"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="aa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/ow_light_gray"
                    android:id="@+id/area"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="aa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/ow_light_gray"
                    android:id="@+id/aff"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="aa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>
        </android.support.v7.widget.CardView>


</LinearLayout>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        android:backgroundTint="@color/ow_navy"
        android:layout_margin="4dp"
        android:layout_below="@+id/first"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/comment"
                android:text="COMMENT"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/ow_blue"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/story"
                android:textSize="14sp"
                android:paddingRight="16sp"
                android:paddingLeft="16sp"
                android:text="AAAA"
                android:textColor="@color/ow_light_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
